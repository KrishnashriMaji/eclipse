package recursion2;

public class Maximum_in_Array {

	public static void main(String[] args) {
		int[] arr = {1,2,3,4,5,6,7};
		int max = arr[0];
		System.out.println(printMax(arr,0,max));

	}
	public static int printMax(int[] arr,int len,int max) {
		if(len< arr.length-1) {
			return arr[len];
		}
		int res = printMax(arr,len-1,max);
		return Math.max(max, res);
	}

}
