package geekster;

public class Class13 {

	public static void main(String[] args) {
		int[] arr = {5,2,3,9,5,8};
		selectionSort(arr);

	}
	
	//------------------------selection sort----------------------//
	
	public static void selectionSort(int[] arr) {
		
		for(int i=0;i<arr.length-1;i++) {
			int curElement = arr[i];
			int resMin = arr[i];
			for(int j=i+1;j<arr.length;i++) {
				if(arr[j]>curElement) {
					resMin = j;
				}
			}
			
			//-------swap--------------//
			if(resMin != curElement) {
				arr[i] = arr[resMin];
				arr[resMin]  = curElement;
			}
		}
		for(int a:arr) {
			System.out.print(a+" ");
		}
	}

}
